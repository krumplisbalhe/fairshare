{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:vue/essential"
  ],
  "rules": {
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "never"],
    "indent": ["error", 2],
    "no-tabs": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-mixed-operators": [0],
    "comma-dangle": ["error", "never"],
    "operator-linebreak": ["error", "after"],
    "consistent-return": [0],
    "quotes": ["error", "single"]
  }
}